@page "/login"
@using EventingApp.Contracts.Requests

<h3>Login</h3>

<EditForm>
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label for="email" class="col-sm-2 col-form-label">Email:</label><br />
        <InputText id="email" class="form-control" />
    </div>

    <div>
        <label for="password" class="col-sm-2 col-form-label">Password:</label><br />
        <InputText id="password" type="password" class="form-control" />
    </div>

    <br />
    <button class="btn btn-primary" type="submit">Login</button>
</EditForm>

